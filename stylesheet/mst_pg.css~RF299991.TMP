@charset "utf-8";
@import url("../webfonts/Playball_Regular/stylesheet.css");
/* CSS Document */

body {
	background-image: url(../images/balloons_spot-wide.jpg);
}

#apDiv1 {
	height: 610px;
	width: 80%;
	margin-right: 10%;
	margin-left: 10%;
	background-color: rgba(0,0,0,0.9);
	margin-bottom: 30px;
	margin-top: 0px;
	border-radius: 10px;
	border-top-width: 10px;
	border-right-width: 20px;
	border-bottom-width: 20px;
	border-left-width: 20px;
	border-top-style: solid;
	border-right-style: solid;
	border-bottom-style: solid;
	border-left-style: solid;
	border-top-color: rgba(255,102,0,0.5);
	border-right-color: rgba(255,102,0,0.5);
	border-bottom-color: rgba(255,102,0,0.5);
	border-left-color: rgba(255,102,0,0.5);
	color: rgba(255,255,255,1);
}

#apDiv1 .head .menu {
	float: left;
	width: 25%;
	
}
#apDiv1 .content {
	margin-top: 5px;
	margin-bottom: 5px;
	overflow: auto;
	height: 500px;
}
#apDiv1 .head .middle {
	width: 48%;
	margin-right: 1%;
	margin-left: 1%;
	float: left;
	text-align: center;
	font-family: "Playball Regular";
}
#apDiv1 .head .last {
	float: right;
	width: 25%;
	text-align: right;
}
#apDiv1 .head {
	background-color: rgba(255,102,0,0.5);
	height: 30px;
}
#footer {
	background-color: rgba(0,0,0,1);
	height: 40px;
	width: 100%;
	padding: 5px;
}
::-webkit-scrollbar {
	width:15px;
}
::-webkit-scrollbar-track {
	background-color: rgba(102,102,102,1);
}
::-webkit-scrollbar-thumb {
	background-color: rgba(204,204,204,1); 
}
::-webkit-scrollbar-button {
	background-color: rgba(255,255,255,1);
}
::-webkit-scrollbar-corner {
	background-color:rgba(255,255,255,1);
}
#footer .reserve {
	margin: 5px;
	padding: 5px;
	color: rgba(255,255,255,1);
	font-size: 13px;
	width: 30%;
}
#footer .copyright {
	width: 50%;
}
.fancy {
	font-family: "Playball Regular";
	font-size: 20px;
	font-weight: bolder;
}
#footer .left {
	float: left;
	width: 65%;
	margin-top: 7px;
	color: rgba(255,255,255,1);
	padding: 5px;
}
#footer .left .text {
	float: right;
	width: 70%;
}



#footer .rightt {
	float: right;
	width: 30%;
	margin-top: 7px;
	color: rgba(255,255,255,1);
}
#apDiv1 .content .contact_head {
	text-align: center;
	font-size: 20px;
	font-family: "Playball Regular";
	margin-top: 20px;
}
#apDiv1 .content .member {
	margin: 5px;
	padding: 5px;
}
#apDiv1 .content .member .names {
	width: 35%;
	float: left;
	text-align: right;
}
#apDiv1 .content .member .fb {
	float: right;
	width: 30%;
}

#apDiv1 .content .member .numbers {
	float: left;
	width: 30%;
}
